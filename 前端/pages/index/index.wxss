/**pages/index/index.wxss**/

page {
  background: #c9e9fe;
}



image {
  width: 100%;
  height: 100%;
}

.header {
  position: relative;
  width: 90%;
  margin: 0 auto;
}

.header .headerBack {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.header .content {
  text-align: center;
  padding: 30rpx 0;
}

.header .content .userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.header .content .textBottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin: 30rpx auto 0 auto;
}

.header .content .textBottom image {
  width: 65rpx;
  height: 50rpx;
  border-radius: 0;
}

.header .content .userinfo-nickname {
  font-size: 30rpx;
  color: #fff
}

.header .content .textBottom .text {
  font-size: 30rpx;
  color: #fff
}

.topImg {
  width: 90%;
  margin: 50rpx auto 0 auto;
}

.batton_1{transform:scale(1.02)}

.imageHidden {
  box-shadow: 0rpx 15rpx 10rpx 2rpx #888888;
}

.headerBack{
  box-shadow: 0rpx 7rpx 10rpx 2rpx #888888;
}

.topButton{
  position: relative;
  left: 10rpx;
  top: 10rpx;
  z-index: 7;
}

.btn-hover {
  position: relative;
  top: 3rpx;
  box-shadow: 0px 0px 8px #999999 inset;
}